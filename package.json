{
  "name": "@majkapp/fastify-mcp-server",
  "version": "0.4.2",
  "description": "A fork of fastify-mcp-server (Flavio Del Grosso / gaiin-platform) with additional features around per-bearer token server support.",
  "type": "module",
  "license": "ISC",
  "author": "Jules White",
  "contributors": [
    { "name": "Flavio Del Grosso", "url": "https://github.com/flaviodelgrosso" },
    { "name": "gaiin-platform", "url": "https://github.com/gaiin-platform" }
  ],
  "main": "dist/index.js",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">= 18.0.0"
  },
  "keywords": [
    "fastify",
    "mcp",
    "plugin",
    "streamable",
    "http",
    "modelcontextprotocol",
    "server",
    "bearer-token",
    "multitenant"
  ],
  "homepage": "https://github.com/gaiin-platform/fastify-mcp-server#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gaiin-platform/fastify-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/gaiin-platform/fastify-mcp-server/issues"
  },
  "scripts": {
    "dev": "node --watch demo/server.ts",
    "demo:per-bearer": "node demo/working-per-bearer-demo.js",
    "demo:runtime-tokens": "node demo/runtime-token-management-demo.js",
    "demo:simple": "node demo/simple-server-demo.js",
    "demo:test-client": "tsx demo/per-bearer-example/test-client.ts",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "prepublishOnly": "npm run build",
    "prepare": "husky",
    "test": "node --test test/**/*.test.ts",
    "test:lcov": "c8 --100 --reporter=lcov node --test test/**/*.test.ts",
    "lint": "eslint",
    "lint:fix": "npm run lint -- --fix",
    "inspector": "npx @modelcontextprotocol/inspector",
    "clean": "rimraf node_modules dist coverage"
  },
  "peerDependencies": {
    "@modelcontextprotocol/sdk": "^1.x",
    "fastify": "^5.x"
  },
  "dependencies": {
    "fastify-plugin": "^5.0.1",
    "zod-to-json-schema": "^3.24.6",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@fastify/autoload": "^6.3.1",
    "@fastify/cors": "^11.0.1",
    "@modelcontextprotocol/sdk": "^1.17.2",
    "@types/node": "^24.0.1",
    "c8": "^10.1.3",
    "close-with-grace": "^2.2.0",
    "eslint": "^9.29.0",
    "fastify": "^5.5.0",
    "lint-staged": "^16.1.1",
    "neostandard": "^0.12.1",
    "pino-pretty": "^13.0.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.6.2",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.ts": "eslint --max-warnings 0"
  }
}